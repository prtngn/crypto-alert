<div class="space-y-6">
  <%= form_with(model: alert, class: "space-y-8 divide-y divide-gray-200") do |form| %>
    <div class="space-y-8 divide-y divide-gray-200">
      <div>
        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <!-- Symbol -->
          <div class="sm:col-span-3">
            <%= form.label :symbol, "Символ", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_field :symbol,
                  list: "binance-symbols",
                  placeholder: "Начните вводить символ (BTC, ETH...)...",
                  data: { controller: "symbol-select" },
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md #{'border-red-300' if alert.errors[:symbol].any?}",
                  required: true %>
              <datalist id="binance-symbols">
                <% TradingPair.active.by_popularity.each do |pair| %>
                  <option value="<%= pair.symbol %>"><%= pair.base_asset %>/<%= pair.quote_asset %></option>
                <% end %>
              </datalist>
            </div>
            <% if alert.errors[:symbol].any? %>
              <p class="mt-2 text-sm text-red-600"><%= alert.errors[:symbol].first %></p>
            <% end %>
            <p class="mt-2 text-sm text-gray-500">
              Доступно <%= TradingPair.active.count %> торговых пар Binance. Начните вводить для поиска.
            </p>
          </div>

          <!-- Threshold Price -->
          <div class="sm:col-span-3">
            <%= form.label :threshold_price, "Пороговая цена ($)", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.number_field :threshold_price, 
                  step: "0.00000001", 
                  placeholder: "50000.00",
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md #{'border-red-300' if alert.errors[:threshold_price].any?}",
                  required: true %>
            </div>
            <% if alert.errors[:threshold_price].any? %>
              <p class="mt-2 text-sm text-red-600"><%= alert.errors[:threshold_price].first %></p>
            <% end %>
            <p class="mt-2 text-sm text-gray-500">Цена, при достижении которой сработает алерт</p>
          </div>

          <!-- Direction -->
          <div class="sm:col-span-3">
            <%= form.label :direction, "Направление", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.select :direction, 
                  [["↑ Вверх (цена растет)", "up"], ["↓ Вниз (цена падает)", "down"]], 
                  {}, 
                  class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md #{'border-red-300' if alert.errors[:direction].any?}",
                  required: true %>
            </div>
            <% if alert.errors[:direction].any? %>
              <p class="mt-2 text-sm text-red-600"><%= alert.errors[:direction].first %></p>
            <% end %>
            <p class="mt-2 text-sm text-gray-500">Сработает когда цена пересечет порог</p>
          </div>

          <!-- Active -->
          <div class="sm:col-span-3">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :active, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :active, "Активен", class: "font-medium text-gray-700" %>
                <p class="text-gray-500">Алерт будет проверяться при мониторинге цен</p>
              </div>
            </div>
          </div>

          <!-- Notification Channels -->
          <div class="sm:col-span-6">
            <%= form.label :notification_channel_ids, "Каналы уведомлений", class: "block text-sm font-medium text-gray-700" %>
            <% if @notification_channels.any? %>
              <fieldset class="mt-4">
                <legend class="sr-only">Выберите каналы</legend>
                <div class="space-y-4">
                  <% @notification_channels.each do |channel| %>
                    <div class="flex items-start">
                      <div class="flex items-center h-5">
                        <%= check_box_tag "alert[notification_channel_ids][]", 
                            channel.id, 
                            alert.notification_channels.include?(channel),
                            class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
                      </div>
                      <div class="ml-3 text-sm">
                        <label class="font-medium text-gray-700">
                          <%= channel.name %>
                          <span class="text-xs text-gray-500">(<%= channel.channel_type %>)</span>
                        </label>
                      </div>
                    </div>
                  <% end %>
                </div>
              </fieldset>
            <% else %>
              <div class="mt-2 rounded-md bg-yellow-50 p-4">
                <div class="flex">
                  <div class="ml-3">
                    <p class="text-sm text-yellow-700">
                      Нет активных каналов уведомлений. 
                      <%= link_to "Создайте канал", new_notification_channel_path, class: "font-medium underline text-yellow-700 hover:text-yellow-600" %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="pt-5">
      <div class="flex justify-end space-x-3">
        <%= link_to "Отмена", alerts_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= form.submit alert.persisted? ? "Обновить алерт" : "Создать алерт", 
            class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% end %>
</div>
